# ==================== SERVER CONFIGURATION ====================
NODE_ENV=development
PORT=5000


# ==================== DATABASE CONFIGURATION ====================
# Local PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=office_nexus_rw
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_DIALECT=postgres

